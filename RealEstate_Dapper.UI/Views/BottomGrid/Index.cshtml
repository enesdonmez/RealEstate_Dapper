@model List<ResultBottomGridDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Bottom Grid</h6>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">İkon</th>
                                <th scope="col">Başlık</th>
                                <th scope="col">Açıklama</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.BottomGridID</th>
                                    <td>@item.Icon</td>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>


                                    <td><a href="/BottomGrid/DeleteBottomGrid/@item.BottomGridID" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/BottomGrid/UpdateBottomGrid/@item.BottomGridID" class="btn btn-success">Güncelle</a></td>

                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/BottomGrid/CreateBottomGrid/" class="btn btn-primary">ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>

