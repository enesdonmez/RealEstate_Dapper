@{
    ViewData["Title"] = "PropertySingle";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<section class="w3l-about-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-about pt-5">
        <div class="container pt-lg-5 py-3">
        </div>
    </div>
</section>
<section class="w3l-breadcrumb">
    <div class="container">
        <ul class="breadcrumbs-custom-path">
            <li><a href="/Home/Index">Anasayfa</a></li>
            <li class="active"><span class="fa fa-angle-right mx-2" aria-hidden="true"></span> İlanlar</li>
            <li class="active"><span class="fa fa-angle-right mx-2" aria-hidden="true"></span> İlan Detayları</li>
        </ul>
    </div>
</section>
<!--/blog-post-->
<section class="w3l-blog post-content py-5">
    <div class="container py-lg-4 py-md-3 py-2">
        <div class="inner mb-4">
            <ul class="blog-single-author-date align-items-center">
                <li>
                    <div class="listing-category"><span>@ViewBag.type</span></div>
                </li>
                <li><span class="fa fa-clock-o"></span> @ViewBag.dateDiff Gün Önce</li>
                <li><span class="fa fa-eye"></span> 250 kişi baktı.</li>
            </ul>
        </div>
        <div class="post-content">
            <h2 class="title-single">@ViewBag.product_title</h2>
        </div>
        <div class="blo-singl mb-4">
            <ul class="blog-single-author-date align-items-center">
                <li>
                    <p>@ViewBag.address @ViewBag.district / @ViewBag.city</p>
                </li>
                <li><span class="fa fa-bed"></span> @ViewBag.bedroomCount Yatak</li>
                <li><span class="fa fa-bath"></span> @ViewBag.bathCount Banyo</li>
                <li><span class="fa fa-share-square-o"></span> @ViewBag.productSize sqrft</li>
            </ul>
            <ul class="share-post">
                <a href="#url" class="cost-estate m-o">@ViewBag.price</a>
            </ul>
        </div>
        <div class="row">
            <div class="col-lg-8 w3l-news">
                <div class="blog-single-post">
                    @await Component.InvokeAsync("_PropertySliderComponentPartial" , new{id = ViewBag.i})

                    <div class="single-post-content">
                        <h3 class="post-content-title mb-3">İlan Açıklaması</h3>
                        <p class="mb-4">
                            @ViewBag.description
                        </p>

                        <div class="single-bg-white">
                            <h3 class="post-content-title mb-4">İlan Detayları</h3>
                            <ul class="details-list">
                                <li><strong>Property id :</strong> PRPT12345 </li>
                                <li><strong>Property size :</strong> @ViewBag.productSize </li>
                                <li><strong>Rooms :</strong> @ViewBag.roomCount </li>
                                <li><strong>Bedrooms :</strong> @ViewBag.bedroomCount </li>
                                <li><strong>Bathrooms :</strong> @ViewBag.bathCount </li>
                                <li><strong>Exterior material :</strong> Brick </li>
                                <li><strong>Structure type :</strong> Wood </li>
                                <li><strong>Garage size :</strong> @ViewBag.roomCount </li>
                                <li><strong>Garages :</strong> 15 </li>
                                <li><strong>Property Price :</strong> $ 750 </li>
                                <li><strong>Built Year :</strong> @ViewBag.buildYear </li>
                                <li><strong>Avaiable from :</strong> Aug 2019 </li>
                            </ul>
                        </div>
                     
                    </div>

                    @await Component.InvokeAsync("_PropertyAmenityComponentPartial")

                    <div class="single-bg-white">
                        <h3 class="post-content-title mb-4">İlan Konumu</h3>
                        <div class="agent-map">
                            <iframe src="@ViewBag.location"></iframe>
                        </div>
                    </div>
                    <div class="single-bg-white mb-0">
                        <h3 class="post-content-title mb-4">Video</h3>
                        <div class="post-content">
                            <iframe src="@ViewBag.video" frameborder="0" allowfullscreen=""></iframe>
                        </div>
                    </div>
                </div>
            </div>
            <div class="sidebar-side col-lg-4 col-md-12 col-sm-12 mt-lg-0 mt-5">
                <aside class="sidebar">

                    @await Component.InvokeAsync("_PropertyAppUserComponentPartial")


                    <!-- Popular Post Widget-->
                    <div class="sidebar-widget popular-posts">
                        <div class="sidebar-title">
                            <h4>Popular Post</h4>
                        </div>

                        <article class="post">
                            <figure class="post-thumb">
                                <img src="~/web/assets/images/l1.jpg" class="radius-image" alt="">
                            </figure>
                            <div class="text">
                                <a href="blog-single.html">
                                    Why we are the best in the business
                                </a>
                                <div class="post-info">Sep 09, 2020 - 2 comments</div>
                            </div>
                        </article>

                        <article class="post">
                            <figure class="post-thumb">
                                <img src="~/web/assets/images/l2.jpg" class="radius-image" alt="">
                            </figure>
                            <div class="text">
                                <a href="blog-single.html">
                                    Build your next landing page.
                                </a>
                                <div class="post-info">Sep 09, 2020 - 2 comments</div>
                            </div>
                        </article>

                        <article class="post">
                            <figure class="post-thumb">
                                <img src="~/web/assets/images/l3.jpg" class="radius-image" alt="">
                            </figure>
                            <div class="text">
                                <a href="blog-single.html">
                                    Simply the best. Better than the rest.
                                </a>
                                <div class="post-info">Sep 10, 2020 - 2 comments</div>
                            </div>
                        </article>

                    </div>

                </aside>
            </div>
        </div>
    </div>
</section>
